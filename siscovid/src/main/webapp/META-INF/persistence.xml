<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="java:jboss/datasources/Siscovid-DS">
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.postgreSQLDialect" />
      <property name="eclipselink.ddl-generation" value="update" /> <!-- create -->
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="false" />
      <property name="javax.persistence.schema-generation.database.action" value="none" /> <!-- drop-and-create -->
    </properties>
  </persistence-unit>
</persistence>